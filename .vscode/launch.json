    "version": "0.2.0",
    "configurations": [
        //change environment if need to switch to other environment. defalt set to dev
        {
            "name": "image_recognition",
            "request": "launch",
            "type": "dart",
            "toolArgs": ["--dart-define=API_FLAVOR=localhost"]
        },
        {
            "name": "image_recognition (profile mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile",
            "toolArgs": ["--dart-define=API_FLAVOR=localhost"]
        },
        {
            "name": "image_recognition (release mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release",
            "toolArgs": ["--dart-define=API_FLAVOR=production"],
            "args": ["--flavor", "development"]
        }
    ]
}